<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @retail_order.customer %></td>
      <td><%= display_date(@retail_order.date_required) %></td>
    </tr>
  </tbody>
</table>

<table id="listtab"  class="stripe" class="mytable" class="display" cellspacing="0" >
  <thead>
    <tr>
      <th> UOM </th>
      <th> Part </th>
      <th> Quantity </th>
      <th> Delete </th>
    </tr>
  </thead>
  <tbody>
    <% @retail_order.retail_order_parts.each do |c| %>
    <tr>
      <td> <%= c.uom %> </td>
      <td> <%= c.partdesc %> </td>
      <td> <%= c.qty %> </td>
      <td><%= link_to 'Delete', retail_order_retail_order_part_path(@retail_order.id, c.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
